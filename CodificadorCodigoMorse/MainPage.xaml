<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CodificadorCodigoMorse.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Codificador / Decodificador Morse"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                HorizontalOptions="Center" />
            <Button
                x:Name="SelectFileBtn"
                Text="Selecionar Arquivo"
                Clicked="OnSelectFileBtn"
                HorizontalOptions="Center" />
            <HorizontalStackLayout
                Spacing="25"
                HorizontalOptions="Center">
                <Button
                    x:Name="EncodeBtn"
                    Text="Codificar"
                    Clicked="OnEncodeClicked"
                    IsEnabled="False" />
                <Button
                    x:Name="DecodeBtn"
                    Text="Decodificar"
                    Clicked="OnDecodeClicked"
                    IsEnabled="False" />
            </HorizontalStackLayout>
            <Grid
                ColumnDefinitions="*,*"
                ColumnSpacing="15"
                Margin="0, 10, 0, 0">
                <VerticalStackLayout
                    Grid.Column="0">
                    <Label
                        Text="Texto Original"
                        HorizontalOptions="Center"
                        FontAttributes="Bold" />
                    <Border
                        Padding="10"
                        Stroke="#E0E0E0"
                        StrokeThickness="4"
                        StrokeShape="RoundRectangle 5">
                        <Editor
                            x:Name="InputOutputEditor"
                            Placeholder="Conteúdo do arquivo aparecerá aqui..."
                            AutoSize="TextChanges"
                            HeightRequest="400" />
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout
                    Grid.Column="1">
                    <Label
                        Text="Resultado em morse"
                        HorizontalOptions="Center"
                        FontAttributes="Bold" />
                    <Border
                        Padding="10"
                        Stroke="#E0E0E0"
                        StrokeThickness="4"
                        StrokeShape="RoundRectangle 5">
                        <Editor
                            x:Name="MorseCodeEditor"
                            Placeholder="texto codificado aqui aqui..."
                            IsReadOnly="True"
                            AutoSize="TextChanges"
                            HeightRequest="400" />
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
